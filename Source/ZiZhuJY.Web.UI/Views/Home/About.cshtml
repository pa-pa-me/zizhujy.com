            <div class="background"></div>
            <div class="bar" style="background-image: url('http://apps.microsoft.com/windows/images/Store.png');">
                @HttpContext.GetLocalResourceObject(this.VirtualPath, "MyWork.Windows8.Text")
            </div>
            <ul class="list">
                <li><a href="http://apps.microsoft.com/windows/app/963f612f-2eed-4175-9b2b-06de964f9eeb" target="_blank" title="@HttpContext.GetLocalResourceObject(this.VirtualPath, "MyWork.Windows8.Plotter.Title")">@HttpContext.GetLocalResourceObject(this.VirtualPath, "MyWork.Windows8.Plotter.Text")</a></li>
            </ul>
        </li>
        <li class="block alpha60 chrome-store">
            <div class="background"></div>
            <div class="bar">@HttpContext.GetLocalResourceObject(this.VirtualPath, "MyWork.ChromeStore.Text")</div>
            <ul class="list">
                <li><a href="https://chrome.google.com/webstore/detail/image-explorer/bjplaimfmacmplmlacojiafeoojonmfk" target="_blank" title="@HttpContext.GetLocalResourceObject(this.VirtualPath, "MyWork.ChromeStore.ImageExplorer.Title")">@HttpContext.GetLocalResourceObject(this.VirtualPath, "MyWork.ChromeStore.ImageExplorer.Text")</a></li>
