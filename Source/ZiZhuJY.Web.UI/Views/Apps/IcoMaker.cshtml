@model ZiZhuJY.Web.UI.Models.IcoModel
@{
    ViewBag.Title = HttpContext.GetLocalResourceObject(this.VirtualPath, "PageTitle");
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

@section HeaderScripts {
    <meta name="keywords" content="@HttpContext.GetLocalResourceObject(this.VirtualPath, "SeoKeywords")" />
    <meta name="description" content="@HttpContext.GetLocalResourceObject(this.VirtualPath, "SeoDescription")" />
    <meta name="robots" content="index, follow" />
    <link href="@Url.Content("~/Content/css/Apps/IcoMaker.css?minify=true")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Apps/Ploter/IcoMaker.js?minify=true")" type="text/javascript"></script>    
    <script type="text/javascript">
    <!--
        $(document).ready(function () {
            //alert("Hello");
        });
    //-->
    </script>
}

<h2>@HttpContext.GetLocalResourceObject(this.VirtualPath, "BannerText")</h2>
<div id="divForm">
    @using (Html.BeginForm("IcoMaker", "Apps", FormMethod.Post, new { enctype = "multipart/form-data", id = "fmIcoMaker", target = "_self" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>@HttpContext.GetLocalResourceObject(this.VirtualPath, "Legend")</legend>
            <div class="editor-label">@Html.LabelFor(model => model.File)</div>
            <div class="editor-field">@Html.Raw("<input id='fileImage' type='file' name='File' data-val='true' />")
                @Html.ValidationMessageFor(model => model.File)
            </div>
            <div id="divPreview"></div>
            <div class="editor-label">@Html.LabelFor(model => model.Link)</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Link)
                @Html.ValidationMessageFor(model => model.Link)
            </div>
            <p><input id="btnSubmit" type="submit" value="@HttpContext.GetLocalResourceObject(this.VirtualPath, "Submit").ToString()" /></p>
        </fieldset>
    }
</div>
