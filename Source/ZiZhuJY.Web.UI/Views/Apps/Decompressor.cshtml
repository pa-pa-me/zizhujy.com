@{
    ViewBag.Title = Context.GetLocalResourceObject(this.VirtualPath, "PageTitle");
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<h2>@Context.GetLocalResourceObject(this.VirtualPath, "PageTitle")</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
