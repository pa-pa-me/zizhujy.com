@model ZiZhuJY.Web.UI.Models.LogOnModel

@{    
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
    ViewBag.Title = HttpContext.GetLocalResourceObject(this.VirtualPath, "PageTitle");
}

<h2>@HttpContext.GetLocalResourceObject(this.VirtualPath, "PageHeader")</h2>
<p>
    @HttpContext.GetLocalResourceObject(this.VirtualPath, "InputUserNameAndPassword")@Html.ActionLink(HttpContext.GetLocalResourceObject(this.VirtualPath, "Register").ToString(), "Register")@HttpContext.GetLocalResourceObject(this.VirtualPath, "NoAccountYet")
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, HttpContext.GetLocalResourceObject(this.VirtualPath, "ValidationSummary").ToString())

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>@HttpContext.GetLocalResourceObject(this.VirtualPath, "AccountInfo")</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="@HttpContext.GetLocalResourceObject(this.VirtualPath, "Logon").ToString()" />
            </p>
        </fieldset>
    </div>
}
