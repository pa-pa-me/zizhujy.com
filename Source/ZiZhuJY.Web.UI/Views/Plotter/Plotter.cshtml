            <div class="content" style="overflow: auto;">
                <table class="tbDoodles">
                    <thead>
                        <tr>
                            <th>
                                @this.Localize("stats")
                            </th>
                            <th>
                                @this.Localize("value")
                            </th>
                            <th>
                                @this.Localize("name.of.stats")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>
                                n
                            </th>
                            <td>
                                {0}
                            </td>
                            <th>
                                @this.Localize("count")
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <span class="math-bar">y</span>
                            </th>
                            <td>
                                {3}
                            </td>
                            <th>
                                @this.Localize("mean")
                            </th>
                        </tr>
                        <tr>
                            <th>
                                Sy
                            </th>
                            <td>
                                {5}
                            </td>
                            <th>
                                @this.Localize("sample.standard.deviation")
                            </th>
                        </tr>
                        <tr>
                            <th>
                                S<sup>2</sup>y
                            </th>
                            <td>
