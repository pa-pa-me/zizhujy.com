                        <tr>
                            <th>
                                σ<sup>2</sup>y
                            </th>
                            <td>
                                {11}
                            </td>
                            <th>
                                @this.Localize("population.variance")
                            </th>
                        </tr>
                        <tr>
                            <th>
                                Σy
                            </th>
                            <td>
                                {13}
                            </td>
                            <th>
                                @this.Localize("sum")
